/**
* Estilos generales de la aplicacion
*
*/

body { 
	padding-top: 70px; 
}

/*Estilos comunes*/
.footer {
    background-color: #28292a;
    color: white;
    padding: 10px 0 30px;
    text-align: left;
    font-size: 12px;
    bottom: 0px;
}

.red{
	position: inherit!important;
}

.error{
	color: red;
	font-size: 11pt;
}


/*Ajuste a estilos de los datatable*/
div.dataTables_wrapper div.messageProcessing {
    background: white;
    width: 200px;
    top: 50%;
    left: 50%;
    position: absolute;
    border-radius: 4px;
    background-color: #333;
    color: #fff;
    padding: 6px;
    margin-left: -100px;
    margin-top: -26px;
    text-align: center
} 
div.dataTables_wrapper div.dataTables_processing {
    top : 0px;
    left : 0px;
    width : 100%;
    height : 100%;
    margin-left:0px;
    margin-top:0px;
    text-align : center;
    vertical-align: middle;
    background-color: rgba(0,0,0,0.4);
}


/*Estilos definidos para el uso de un overlay para bloqueo de una pantalla*/
DIV.overlay{
  position: fixed;s
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1061;
  background-color: rgba(0,0,0,0.5);
}
DIV.overlayModal{
position: fixed;
    top: 50%;
    left: 50%;
    padding : 10px;
    line-height: 100px;
    margin-left: -150px;
    margin-top: -100px;
    background-color: rgba(0,0,0,0.6);
    text-align: center;
    color:#fff;
    z-index: 1062;
    outline: 9999px solid rgba(0,0,0,0.3);
}