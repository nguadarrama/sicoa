    border-radius: 4px;
    background-color: #333;
    color: #fff;
    padding: 6px;
    margin-left: -100px;
    margin-top: -26px;
    text-align: center
} 
div.dataTables_wrapper div.dataTables_processing {
    top : 0px;
    left : 0px;
    width : 100%;
    height : 100%;
    margin-left:0px;
    margin-top:0px;
    text-align : center;
    vertical-align: middle;
    background-color: rgba(0,0,0,0.4);
