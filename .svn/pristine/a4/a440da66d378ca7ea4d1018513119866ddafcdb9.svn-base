@CHARSET "ISO-8859-1";

html,body,div,span,applet,object,iframe,h1,h2,h3,h4,h5,h6,p,blockquote,pre,a,abbr,acronym,address,big,cite,code,del,dfn,em,font,img,ins,kbd,q,s,samp,small,strike,sub,tt,var,dl,dt,dd,ol,ul,li,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td{margin:0;padding:0;border:0;outline:0;font-style:inherit;font-family:'Helvetica', sans-serif, Arial;font-weight:normal;text-shadow:none}input[type="text"],input[type="password"],input[type="email"],input[type="tel"],input[type="number"]{font-size:12px;margin-bottom:5px;border:none;border-bottom:1px solid #CCCCCC;outline:none!important;-webkit-box-shadow:none!important;-moz-box-shadow:none!important;box-shadow:none!important;border-radius:0 !important;-webkit-border-radius:0 !important;-moz-border-radius:0 !important}input[type="text"]:focus,input[type="password"]:focus,input[type="email"]:focus,input[type="tel"]:focus,input[type="number"]:focus{border-bottom:1px solid #69B0E7}input[type="text"].error,input[type="password"].error,input[type="email"].error,input[type="tel"].error,input[type="number"].error{border-bottom:1px solid #FD696B}input.input-user{background:url(../image/login/ico-user.svg) left center no-repeat;background-size:16px;padding-left:26px}input[type="password"].input-pass{background:url(../image/login/ico-view.svg) left center no-repeat;background-size:18px;padding-left:26px}input[type="text"].input-pass{background:url(../image/login/ico-dontview.svg) left center no-repeat;background-size:18px;padding-left:26px}.btn{padding:7px 40px;font-size:14px;border-radius:20px !important;-webkit-border-radius:20px !important;-moz-border-radius:20px !important;transition:all 0.3s ease;-ms-transition:all 0.3s ease;-webkit-transition:all 0.3s ease;-o-transition:all 0.3s ease;-moz-transition:all 0.3s ease}.btn-info{border:1px solid #4E92DF;background:#4E92DF}.btn-info:hover{border:1px solid #025abe;background:#025abe}header{background:#FFFFFF;border-bottom:10px solid #545454;position:fixed;top:0;left:0;right:0;z-index:99}header .logos{display:flex;height:100px;align-items:center}header .logos .logo-segob{background:url(../image/login/logo-segob.png) center center no-repeat;background-size:contain;width:217px;height:68px;margin-right:20px}header .logos .logo-control{background:url(../image/login/logo-control.png) center center no-repeat;background-size:contain;width:461px;height:67px;margin-left:auto}.alert{position:fixed;top:150px;left:20px;right:20px;font-size:14px}.alert .close{font-size:16px}.page-login{background:url(../image/login/bg-login.jpg) center center no-repeat;background-size:cover;padding:160px 0;margin-top:110px}.page-login .box-login{background:#FFFFFF;padding:25px;-webkit-box-shadow:0px 0px 15px 0px #ccc;-moz-box-shadow:0px 0px 15px 0px #ccc;box-shadow:0px 0px 15px 0px #ccc;border-radius:10px !important;-webkit-border-radius:10px !important;-moz-border-radius:10px !important}.page-login .box-login h1{color:#272829;font-size:20px;font-weight:100;margin-bottom:3px}.page-login .box-login p{color:#272829;font-size:14px;font-weight:100;margin-bottom:5px}.page-login .box-login .divider{border-top:1px solid #DCE0E0;margin:15px 0}.page-login .box-login .divider .span{background:#CE0A23;width:50px;height:6px}.page-login .box-login label{width:100%;display:block;margin-top:25px;position:relative}.page-login .box-login label p{font-weight:normal;margin:0}.page-login .box-login label .btn-view{background:transparent;border:none;width:19px;height:22px;position:absolute;bottom:1px;left:0;cursor:pointer}.page-login .box-login button{margin-top:20px}footer{background:#DDDDDD;padding:10px 0}footer p{color:#272829;font-size:12px}

