package mx.gob.segob.dgtic.web.config.security.constants;

/**
 * Constantes requeridas para configurar los parametros de seguridad 
 */
public final class AutorizacionConstants {
	
	/**
	 * Restringe la construccion de la clase para evitar una creacion mediante el constructor por default.
	 */
	private AutorizacionConstants(){
		throw new IllegalStateException("Constants class");
	}
	
	/**
	 * Constante que representa el atributo AUTHORIZATION_HEADER_NAME, nombre con que se identifica el Header de autorizaci&oacute;n del request. 
	 */
	public static final String AUTHORIZATION_HEADER_NAME = "Authorization";
	
	/**
	 * Constante que representa el atributo AUTHENTICATION_TOKEN_WITH_SCHEME, est&aacute;ndar del esquema de transporte del token de autorizaci&oacute;n. 
	 */
	public static final String AUTHENTICATION_TOKEN_WITH_SCHEME = "Bearer %s";
	
	
	/**
	 * Constante que representa el atributo ATTR_DATA_JSON_NAME, nombre del atributo que contiene el cuerpo de la respuesta dentro del objeto JSON de los webservices de autenticaci&oacute;n. 
	 */
	public static final String ATTR_DATA_JSON_NAME = "data";
	
	/**
	 * Constante que representa el atributo ATTR_META_DATA_JSON_NAME, nombre del atributo que contiene el metadata de la respuesta dentro del objeto JSON de los webservices de autenticaci&oacute;n. 
	 */
	public static final String ATTR_META_DATA_JSON_NAME = "metadata";
	
	/**
	 * Constante que representa el atributo ATTR_META_DATA_ERRORES_JSON_NAME, nombre del atributo que contiene los errores en el metadata de la respuesta dentro del objeto JSON de los webservices de autenticaci&oacute;n. 
	 */
	public static final String ATTR_META_DATA_ERRORES_JSON_NAME = "errors";
	
	/**
	 * Constante que representa el atributo ATTRIBUTE_ERROR_LOGIN, nombre del atributo en el request que contiene el mensaje de error generado durante la autenticaci&oacute;n. 
	 */
	public static final String ATTRIBUTE_ERROR_LOGIN = "MENSAJE_EXCEPCION_LOGIN";	
	
	/**
	 * Constante que representa el atributo TIEMPO_SESION_MINUTOS, tiempo de sesi&oacute;n configurado dentro del archivo de propiedades de configuraci&oacute;n se identifica con el nombre "session.tiempo_sesion.minutos". 
	 */
	public static final String TIEMPO_SESION_MINUTOS = "session.tiempo_sesion.minutos";
	
}
